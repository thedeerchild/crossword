{
	"name": "crossword",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "npm run build:app && npm run build:server",
		"build:app": "vite build",
		"build:server": "esbuild src/main.ts --bundle --platform=node --format=esm --external:../build/handler.js --banner:js=\"import {createRequire} from 'module';const require=createRequire(import.meta.url);\" --outfile=build/index.js",
		"preview": "ORIGIN=http://localhost:4173 node ./build/index.js",
		"preview:rebuild": "npm run build && ORIGIN=http://localhost:4173 node ./build",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@skeletonlabs/skeleton": "^1.2.5",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.5.0",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.9",
		"@types/express": "^4.17.17",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"esbuild": "^0.17.19",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.23",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0",
		"vitest": "^0.25.3"
	},
	"type": "module",
	"dependencies": {
		"express": "^4.18.2",
		"http-status-codes": "^2.2.0",
		"slonik": "^33.3.1",
		"ulid": "^2.3.0"
	}
}
